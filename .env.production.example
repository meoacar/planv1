# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================
# Bu dosya production ortamı için örnek konfigürasyondur.
# Gerçek değerleri .env.production dosyasına kopyalayın.

# ========================================
# APP CONFIGURATION
# ========================================
NEXT_PUBLIC_APP_URL=https://zayiflamaplan.com
NODE_ENV=production

# ========================================
# DATABASE (Production MySQL)
# ========================================
# Production veritabanı bağlantısı
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://prod_user:STRONG_PASSWORD_HERE@db.zayiflamaplan.com:3306/zayiflamaplan_prod?connection_limit=20&pool_timeout=30&connect_timeout=10"

# ========================================
# NEXTAUTH (Authentication)
# ========================================
NEXTAUTH_URL=https://zayiflamaplan.com
# CRITICAL: Generate a strong secret with: openssl rand -base64 32
NEXTAUTH_SECRET=GENERATE_STRONG_SECRET_HERE_USE_OPENSSL_RAND_BASE64_32

# ========================================
# GOOGLE OAUTH (Optional)
# ========================================
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# ========================================
# REDIS (Required for Confession System)
# ========================================
# Production Redis bağlantısı (cache, queue, rate limiting için gerekli)
# Option 1: Redis URL (Önerilen)
REDIS_URL=redis://:REDIS_PASSWORD@redis.zayiflamaplan.com:6379

# Option 2: Individual settings
# REDIS_HOST=redis.zayiflamaplan.com
# REDIS_PORT=6379
# REDIS_PASSWORD=STRONG_REDIS_PASSWORD
# REDIS_TLS=true

# ========================================
# OPENAI API (Required for Confession AI Responses)
# ========================================
# OpenAI API key - Confession sistemi için kritik!
# Dashboard: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-PRODUCTION_API_KEY_HERE

# OpenAI Configuration
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=5000

# ========================================
# EMAIL (Resend)
# ========================================
# Production email servisi
RESEND_API_KEY=re_PRODUCTION_API_KEY_HERE
EMAIL_FROM="ZayiflamaPlan <noreply@zayiflamaplan.com>"
ADMIN_EMAIL=admin@zayiflamaplan.com

# ========================================
# FILE UPLOAD
# ========================================
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=5242880
# S3 Configuration (Optional - for production file storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=eu-central-1
# AWS_S3_BUCKET=zayiflamaplan-uploads

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=true
# Confession specific rate limits
CONFESSION_DAILY_LIMIT=3
EMPATHY_HOURLY_LIMIT=100
REPORT_DAILY_LIMIT=10

# ========================================
# MONITORING & ERROR TRACKING
# ========================================
# Sentry (Error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=zayiflamaplan

# Vercel Analytics (Performance monitoring)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# Custom metrics endpoint (Optional)
METRICS_ENDPOINT=https://metrics.zayiflamaplan.com/api/metrics
METRICS_API_KEY=your-metrics-api-key

# ========================================
# QUEUE CONFIGURATION
# ========================================
# Bull Queue settings for AI response generation
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_TIMEOUT=10000

# ========================================
# CACHE CONFIGURATION
# ========================================
# Cache TTL settings (in seconds)
CACHE_FEED_TTL=300
CACHE_POPULAR_TTL=3600
CACHE_STATS_TTL=3600
CACHE_AI_RESPONSE_TTL=604800

# ========================================
# SECURITY
# ========================================
# CORS allowed origins (comma separated)
ALLOWED_ORIGINS=https://zayiflamaplan.com,https://www.zayiflamaplan.com

# Content Security Policy
CSP_ENABLED=true

# ========================================
# FEATURE FLAGS
# ========================================
FEATURE_CONFESSION_WALL=true
FEATURE_SEASONAL_THEMES=true
FEATURE_TELAFI_PLANS=true
FEATURE_AI_RESPONSES=true

# ========================================
# BACKUP CONFIGURATION
# ========================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=zayiflamaplan-backups

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
# Log destinations (comma separated): console,file,cloudwatch
LOG_DESTINATIONS=console,cloudwatch

# ========================================
# PERFORMANCE
# ========================================
# Next.js optimization
NEXT_TELEMETRY_DISABLED=1
# Image optimization
NEXT_PUBLIC_IMAGE_DOMAINS=zayiflamaplan.com,cdn.zayiflamaplan.com

# ========================================
# MAINTENANCE MODE
# ========================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Sistem bakımda. Kısa süre sonra döneceğiz."
